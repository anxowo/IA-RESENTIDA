version: "3.7"

services:
  opencloud:
    image: owncloud/ocis:latest
    container_name: opencloud
    ports:
      - "9200:9200"
    environment:
      OCIS_INSECURE: "true"
      OCIS_URL: "http://localhost:9200"
      OCIS_LOG_LEVEL: "info"
      OCIS_LOG_COLOR: "true"
      OCIS_ADMIN_USER_ID: "admin"
      OCIS_ADMIN_PASSWORD: "admin123"
    volumes:
      - ./data:/var/lib/ocis
    restart: unless-stopped

